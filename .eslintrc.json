{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "globals": {
        "module": true,
        "shallow": true,
        "render": true,
        "mount": true,
        "expect": true,
        "React": true
    },
    "plugins": [
        "react"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "no-console": [
            "warn", {
                "allow": ["error"]
            }
        ],
        "no-var": "warn",
        "react/prop-types": 0
    }
}
